{% extends 'base.html.twig' %}

{% block title %}Login page{% endblock %}

{% block body %}

    <div class="container">

        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-12 mt-5">

            {% if error %}
                <div class="rounded alert alert-danger alert-dismissible fade show" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endif %}

            <div class="card card-small h-100">
                <div class="card-header border-bottom">
                    <h6 class="m-0">Logowanie</h6>
                </div>
                <div class="card-body">

                    <form action="{{ path('login') }}" method="post">

                        <div class="form-group">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">person</i>
                                    </span>
                                </div>
                                <input type="text" class="form-control" id="username"
                                       placeholder="Użytkownik"
                                       name="_username" value="{{ last_username }}" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">lock</i>
                                    </span>
                                </div>
                                <input type="password" class="form-control" id="password"
                                       placeholder="Hasło"
                                       name="_password" />
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="hidden" name="_target_path" value="/" />
                            <button class="btn btn-primary" type="submit">Zaloguj</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
