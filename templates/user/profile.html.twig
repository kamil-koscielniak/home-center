{% extends '_template/main.html.twig' %}

{% block header %}Profil{% endblock %}
{% block title %}Profil użytkownika{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-6">
            <div class="card card-small mb-4 pt-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4 text-center">
                            <form>
                                <div class="mb-2 mx-auto">
                                    {% if isAvatarExists(app.user.id) %}
                                        <img class="user-avatar rounded-circle mr-2" src="/{{ getAvatar(app.user.id) }}"
                                             alt="Avatar">
                                    {% else %}
                                        <i class="user-avatar empty-avatar rounded-circle mr-2 fa fa-user-circle"></i>
                                    {% endif %}
                                </div>
                                <h4 class="mb-2">{{ app.user.username }}</h4>
                                <button class="btn btn-success"><i class="fa fa-user-circle"></i> Zapisz avatar</button>
                            </form>
                        </div>
                        <div class="col-lg-8">
                            <div class="pl-3">
                                <strong class="text-muted d-block mb-1">Zmiana hasła</strong>
                                {{ form_start(form) }}
                                    <div class="form-group">
                                        {{ form_widget(form.oldPassword, {attr: {placeholder: 'Stare hasło'}}) }}
                                        {{ form_errors(form.oldPassword) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.newPassword, {attr: {placeholder: 'Nowe hasło'}}) }}
                                        {{ form_errors(form.newPassword) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.repeatedNewPassword, {attr: {placeholder: 'Powtórz nowe hasło'}}) }}
                                        {{ form_errors(form.repeatedNewPassword) }}
                                    </div>
                                    <button class="btn btn-primary"><i class="fa fa-key"></i> Zapisz nowe hasło</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
